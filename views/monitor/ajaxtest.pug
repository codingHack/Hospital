    script(type='text/javascript' language='javascript' src='https://code.jquery.com/jquery-3.3.1.js')
    script.
      $(document).ready(function () {
      updateData();
      });
      function updateData(){
      $.ajax({
      url: "/monitor/JSONURL",
      dataType:"json",
      cache : false,
      success: function(data){ // getserver.php 파일에서 echo 결과값이 data 
      $.each(data, function(key, value){
           alert(value.name);//이런식으로 데이터에 접근
      });
      }
      });
      setTimeout("updateData()", 2000); // 2초 단위로 갱신 처리
      }