    script(type='text/javascript' language='javascript' src='https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js')
    script.
      $(document).ready(function() {
      updateTable();
      } );
      function updateTable(){
      $('#example').DataTable().clear();
      $('#example').DataTable().destroy();
      writeTable();
      setTimeout("updateTable()", 2000);
      }
      function writeTable(){
      $('#example').DataTable( {
      "destroy":true,
      "ajax": {
      "url": "/monitor/json",
      "dataType":"json",
      "dataSrc": ""
      },
      "columns": [
      { "data": "name" },
      { "data": "personal_number" },
      { "data": "phone_number" },
      { "data": "gender" },
      { "data": "patient_id" }
      ]
      } );
      }

    
    table#example.table.table-striped.table-bordered(style='width:100%')
      thead
        tr
          th Name
          th personal_number
          th phone_number
          th gender
          th patient_id
