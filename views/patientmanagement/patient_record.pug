extends ../layoutemp

block content
    .container
        .row(style="margin-top:2%; margin-bottom:2%;")
            .col-md-1
                img.rounded-0(src='/images/medicine.png', alt='...', style="width:70px;")
            .com-md-5
                h1(style="margin-top:3%;") 
                    #{patient_id} 번 환자 기록
        table.table
            thead
                tr
                    th(scope="col") 기록번호
                    th(scope="col") 담당 간호사
                    th(scope="col") 시행 일시
                    th(scope="col") 내용
                    th(scope="col") 내용
            tbody
                each record in recordList
                    tr
                        th #{record.record_id}
                        td #{record.name}
                        td #{moment(record.date).format('YYYY-MM-DD')}
                        td #{record.information} 
                        td #{record.description}  
        .btn.btn-primary(onclick="history.back(-1);") 돌아가기



 


