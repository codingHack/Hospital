    script.
        $(document).ready(function() {
        var table =$('#example').DataTable( {
        "ajax": {
        "url": "/superadmin/json",
        "dataType":"json",
        "dataSrc": ""
        },
        "columns": [
        { "data": "employee_id" },
        { "data": "name" },
        { "data": "personal_number" },
        { "data": "phone_number" },
        { "data": "gender" },
        { "data": "position" }
        { "data": "employee_password" }
        ],
        "order":([7,"desc"])
        } );
        setInterval(function(){
            table.ajax.reload();
            }, 3000);
        } );
